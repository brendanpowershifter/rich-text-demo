{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": ["src", "stories", "pages"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["src/Components/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test|spec.tsx?", "**/__tests__/**/*.test.tsx?"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "setupTests.js"]
}
